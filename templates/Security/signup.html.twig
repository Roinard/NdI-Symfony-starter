{% extends 'app.html.twig' %}

{% block title %} App - Inscription {% endblock %}

{% block content %}

    {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}
    <fieldset>
        <legend>Identit√©</legend>
        {{ form_row(form.name) }}
        {{ form_row(form.surname) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.phone) }}
    </fieldset>

    <fieldset>
        <legend> Adresse </legend>
        {{ form_row(form.address) }}
        {{ form_row(form.city) }}
        {{ form_row(form.zipCode) }}
    </fieldset>

    <fieldset>
        <legend> Mot de passe </legend>
        {{ form_row(form.password) }}
        {{ form_row(form.password_repeat) }}
    </fieldset>

    {{ form_row(form.save, {'attr':{'class':'btn-primary form-control'}}) }}
    {{ form_end(form) }}
    
{% endblock %}